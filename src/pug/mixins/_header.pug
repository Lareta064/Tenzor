mixin header(arg)
	header.header(style="background-image:url(./img/"+ arg.bgImg +".jpg)")&attributes(attributes)
		//======= навигация в шапке =============
		.header-nav
			.container-xl
				.header-nav__content
					a(href="#!").logo.logo-white
						+svgIcon('logo')
					
					+headerMenu(arg.menuItems)
					
					.contacts-wrapper
						a(href="tel:84951213777") +7(495) 121-3-777
					.header-group.flex-v-center
						.button-icon
							+svgIcon('map-pin')
						.button-icon
							+svgIcon('user')
						.button-icon(frame-btn="search-panel")
							+svgIcon('search')
					.header-lang
						a(href="#!").txt-gray Rus
						a(href="#!") Eng
			//=========большое меню на белом фоне =========
			+fullMenu
		.header-content.mt-186
			.container-xl.pos-rel
				.header-social.pos-abs
					+social
				.header-content__wrapper
					.brdcrumbs
						a(href="#!") Главная
						a(href="#!") Бизнес регата
					.header__title
						h1.h1 Success race
					.header__bottom-text
